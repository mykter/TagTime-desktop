{
  "name": "TagTime-desktop",
  "description": "Time tracking for space cadets - desktop edition",
  "version": "0.1.0",
  "license": "ISC",
  "author": {
    "name": "Michael Macnair",
    "email": "tagtime@mykter.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mykter/TagTime-desktop.git"
  },
  "main": "src/main.js",
  "dependencies": {
    "configstore": "^3.0.0",
    "electron-main-notification": "^1.0.0",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "random-js": "^1.0.8",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "coveralls": "^2.12.0",
    "electron": "^1.4.15",
    "electron-builder": "^16.0.1",
    "electron-mocha": "^3.3.0",
    "google-closure-compiler": "20170218.0.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.4.3",
    "ps-tree": "^1.1.0",
    "should": "^11.2.0",
    "sinon": "^2.0.0",
    "spectron": "^3.6.0",
    "stats-lite": "^2.0.3",
    "tmp": "0.0.31",
    "xvfb-maybe": "^0.1.3"
  },
  "scripts": {
    "start": "electron .",

    "test": "xvfb-maybe electron-mocha",
    "debugtest": "electron-mocha --renderer --debug --interactive ./test/",

    "precover": "xvfb-maybe electron-mocha --require ./support/istanbul-reporter",
    "cover": "istanbul report --root ./coverage html lcov",
    "coveralls": "npm run cover && coveralls < ./coverage/lcov.info",

    "pack": "build --dir",
    "dist": "build",

    "clean": "rm -rf ./coverage ./dist ./doc",
    "lint": "./support/lint.sh",
    "doc": "jsdoc src --destination doc --package ./package.json --readme ./README"
  },
  "build": {
    "appId": "com.mykter.tagtime",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icon.icns"
    },
    "win": {
      "icon": "resources/tagtime.ico"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  }
}
