{
  "name": "TagTime-desktop",
  "description": "Time tracking for space cadets - desktop edition",
  "version": "0.4.1",
  "license": "ISC",
  "author": {
    "name": "Michael Macnair",
    "email": "tagtime@mykter.com"
  },
  "bugs": {
    "url": "https://github.com/mykter/TagTime-desktop/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mykter/TagTime-desktop.git"
  },
  "engines": {
    "node": ">=7.6.0"
  },
  "main": "app/src/main-process/main.js",
  "dependencies": {
    "about-window": "^1.7.0",
    "auto-launch": "^5.0.1",
    "bootstrap": "^3.3.5",
    "bootstrap-tagsinput": "^0.7.1",
    "commander": "^2.11.0",
    "electron-devtools-installer": "^2.2.0",
    "electron-main-notification": "^1.0.0",
    "electron-store": "^1.2.0",
    "electron-window-state": "^4.1.1",
    "jquery": "^2.2.4",
    "lodash": "^4.17.4",
    "moment": "^2.17.1",
    "photonkit": "^0.1.2",
    "random-js": "^1.0.8",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "typeahead.js": "^0.11.1",
    "winston": "^2.3.1"
  },
  "devDependencies": {
    "@types/webdriverio": "^4.8.4",
    "babel-core": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-electron": "^1.4.15",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "electron": "^1.7.5",
    "electron-builder": "^19.8.0",
    "electron-mocha": "^4.0.0",
    "eslint": "^4.3.0",
    "eslint-plugin-react": "^7.2.0",
    "gulp": "^3.9.1",
    "gulp-babel": "^7.0.0",
    "gulp-mocha": "^4.3.1",
    "gulp-sourcemaps": "^2.6.1",
    "gulp-typescript": "^3.2.2",
    "is-electron-renderer": "^2.0.1",
    "is-running": "^2.1.0",
    "istanbul": "^0.4.5",
    "jsdoc": "^3.5.3",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^4.0.2",
    "nyc": "^11.1.0",
    "ps-tree": "^1.1.0",
    "react-test-renderer": "^15.6.1",
    "rimraf": "^2.6.1",
    "should": "^13.0.0",
    "sinon": "^4.0.0",
    "snap-shot": "^2.17.0",
    "spectron": "^3.7.2",
    "stats-lite": "^2.1.0",
    "tmp": "0.0.33",
    "typescript": "^2.5.2",
    "xvfb-maybe": "^0.2.1"
  },
  "scripts": {
    "build": "gulp clean:build && gulp build:tests",
    "start": "electron .",
    "test": "run-s -n test:renderer test:main test:e2e lint",
    "test:renderer": "xvfb-maybe electron-mocha --renderer ./app/test",
    "test:main": "xvfb-maybe electron-mocha ./app/test/main",
    "test:e2e": "xvfb-maybe mocha ./app/test/e2e",
    "debugtest": "xvfb-maybe electron-mocha --renderer --debug --interactive ./app/test/",
    "debugtestmain": "xvfb-maybe electron-mocha --debug --interactive ./app/test/main",
    "precover:e2e": "gulp clean:build",
    "cover:e2e": "xvfb-maybe gulp report:e2e",
    "precover": "cross-env NODE_ENV=coverage run-s -n cover:e2e \"test:{main,renderer} -- --require ./support/istanbul-reporter\"",
    "cover": "nyc report --temp-directory ./coverage/raw --reporter=html --reporter=lcov",
    "precoveralls": "npm run cover",
    "coveralls": "coveralls < ./coverage/lcov.info",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "rimraf ./coverage ./dist ./doc ./app",
    "lint": "eslint src test support",
    "doc": "jsdoc src --destination doc --package ./package.json --readme ./README"
  },
  "build": {
    "appId": "com.mykter.tagtime",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icon.icns"
    },
    "win": {
      "icon": "resources/tagtime.ico"
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ]
    }
  }
}
