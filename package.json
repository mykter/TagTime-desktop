    "jsdoc": "^3.5.5",
    "mkdirp": "^0.5.1",
    "mocha-appveyor-reporter": "^0.4.0",
    "npm-run-all": "^4.1.2",
    "nyc": "^11.6.0",
    "ps-tree": "^1.1.0",
    "react-test-renderer": "^16.3.0",
    "rimraf": "^2.6.2",
    "should": "^13.2.1",
    "sinon": "^5.0.3",
    "snap-shot": "^2.17.0",
    "spectron": "^3.8.0",
    "stats-lite": "^2.1.0",
    "tmp": "0.0.33",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.10.0",
    "tslint-react": "^3.5.1",
    "typescript": "^2.8.1",
    "xvfb-maybe": "^0.2.1"
  },
  "scripts": {
    "build": "gulp clean:build && gulp build:tests",
    "start": "electron .",
    "test": "run-s -n test:* lint",
    "appveyor-test":
      "run-s -n \"test:* -- --reporter mocha-appveyor-reporter \" lint",
    "test:renderer": "xvfb-maybe electron-mocha --renderer ./app/test",
    "test:main": "xvfb-maybe electron-mocha ./app/test/main-process",
    "test:e2e": "xvfb-maybe mocha ./app/test/e2e",
    "debugtest":
      "xvfb-maybe electron-mocha --renderer --debug --interactive ./app/test/",
    "debugtestmain":
      "xvfb-maybe electron-mocha --debug --interactive ./app/test/main-process",
    "precover:e2e": "gulp clean:build",
    "cover:e2e": "xvfb-maybe gulp report:e2e",
    "precover":
      "cross-env NODE_ENV=coverage run-s -n cover:e2e \"test:{main,renderer} -- --require ./support/istanbul-reporter\"",
    "cover":
      "nyc report --temp-directory ./coverage/raw --reporter=html --reporter=lcov",
    "precoveralls": "npm run cover",
    "coveralls": "coveralls < ./coverage/lcov.info",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "clean": "rimraf ./coverage ./dist ./doc ./app",
    "lint": "eslint src test support && tslint --project .",
    "doc":
      "jsdoc src --destination doc --package ./package.json --readme ./README"
  },
  "build": {
    "appId": "com.mykter.tagtime",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "resources/icon.icns"
    },
    "win": {
      "icon": "resources/tagtime.ico"
    },
    "linux": {
      "category": "Utility",
      "target": ["snap", "AppImage", "deb", "rpm"]
    }
  }
}
