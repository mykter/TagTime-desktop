    "photonkit": "^0.1.2",
    "random-js": "^1.0.8",
    "react": "^16.3.0",
    "react-autosuggest": "^9.3.4",
    "react-dom": "^16.3.0",
    "react-hotkeys": "^1.0.6",
    "react-tagsinput": "^3.19.0",
    "winston": "^2.4.1"
  },
  "devDependencies": {
    "@types/auto-launch": "^5.0.0",
    "@types/electron-store": "^1.3.0",
    "@types/electron-window-state": "^2.0.31",
    "@types/lodash": "^4.14.106",
    "@types/mocha": "^5.0.0",
    "@types/random-js": "^1.0.30",
    "@types/react": "^16.1.0",
    "@types/react-autosuggest": "^9.3.3",
    "@types/react-dom": "^16.0.4",
    "@types/react-tagsinput": "^3.19.2",
    "@types/sinon": "^5.0.0",
    "@types/tmp": "0.0.33",
    "@types/webdriverio": "^4.10.1",
    "@types/winston": "^2.3.8",
    "babel-core": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.5",
    "babel-preset-electron": "^1.4.15",
    "babel-preset-react": "^6.24.1",
    "coveralls": "^3.0.0",
    "cross-env": "^5.1.4",
    "electron": "^2.0.0",
    "electron-builder": "^20.8.1",
    "electron-mocha": "^6.0.1",
    "eslint": "^4.19.1",
    "eslint-plugin-react": "^7.7.0",
    "fkill": "^5.3.0",
    "gulp": "^3.9.1",
    "gulp-apply-patch": "^1.0.1",
    "gulp-babel": "^7.0.1",
    "gulp-mocha": "^5.0.0",
    "gulp-sass": "^4.0.0",
    "gulp-sourcemaps": "^2.6.4",
    "gulp-typescript": "^4.0.2",
    "is-electron-renderer": "^2.0.1",
    "is-running": "^2.1.0",
